<h3>単位新規作成</h3>

<%= form_with(model: [@material, @unit], local: true) do |f| %>
  <% if @unit.errors.any? %>
    <div id="error_explanation">
      <h2><%= @unit.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @unit.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "単位名" %>
  </div>

  <div class="field">
    <%= f.submit "登録" %>
  </div>
<% end %>
